<%# Answer Variable => Ruby Variable Translation -%>
<%
  @master_install   = 'y'
  @agent_install    = 'y'
  @console_install  = 'y'
  @agent_server     = @fqdn
  @agent_certname   = @fqdn
  @master_certname  = @fqdn
  @dns_alt_names    = @dnsaltnames
  @host_name        = @hostname
  @console_name     = @fqdn
  @console_port     = 443
  @db_name          = 'console'
  @db_user          = @consoleuser
  @db_password      = @consolepassword
  @db_host_name     = 'localhost'
