<%# Answer Variable => Ruby Variable Translation -%>
<%
  @certname         = ENV["q_puppetmaster_certname"]
  @master_install   = ENV["q_puppetmaster_install"] == 'y' ? true : false
-%>

Listen 8140
<VirtualHost *:8140>
    SSLEngine on
    SSLCipherSuite ALL:!ADH:RC4+RSA:+HIGH:+MEDIUM:-LOW:-SSLv2:-EXP
    SSLCertificateFile      /etc/puppetlabs/puppet/ssl/certs/<%= @certname -%>.pem
    SSLCertificateKeyFile   /etc/puppetlabs/puppet/ssl/private_keys/<%= @certname -%>.pem
    SSLCertificateChainFile /etc/puppetlabs/puppet/ssl/certs/ca.pem
    SSLCACertificateFile    /etc/puppetlabs/puppet/ssl/certs/ca.pem

<%# only expect the crl to be here if we have a CA -%>
<% if @master_install == true -%>
    SSLCARevocationFile     /etc/puppetlabs/puppet/ssl/ca/ca_crl.pem
<% end -%>

    SSLVerifyClient optional
    SSLVerifyDepth  1
    SSLOptions +StdEnvVars

    RequestHeader set X-SSL-Subject %{SSL_CLIENT_S_DN}e
    RequestHeader set X-Client-DN %{SSL_CLIENT_S_DN}e
    RequestHeader set X-Client-Verify %{SSL_CLIENT_VERIFY}e

    RackAutoDetect On
    DocumentRoot /var/opt/lib/pe-puppetmaster/public/
    <Directory /var/opt/lib/pe-puppetmaster/>
        Options None
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
